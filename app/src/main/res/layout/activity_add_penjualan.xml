<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAddPenjualan">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNamaPelanggan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Nama Pelanggan"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextNamaPelanggan"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/tvNamaPelanggan"
            android:background="@drawable/custom_edit_text"
            android:fontFamily="@font/poppinsregular"
            android:hint="Masukkan Nama Pelanggan"
            android:inputType="textPersonName"
            android:padding="7dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNamaPelanggan"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Tanggal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvIsiTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTanggal"
            android:fontFamily="@font/poppinsregular"
            android:text="dd/mm/yyyy"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btnDate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/tvTanggal"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/tvIsiTanggal"
            android:background="@drawable/ic_calendar" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/tvItemBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Nama Item Barang"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextItemBarang"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/custom_edit_text"
            android:fontFamily="@font/poppinsregular"
            android:hint="Masukkan Nama Item Barang"
            android:inputType="text"
            android:padding="7dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvJumlahItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Jumlah Item"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextJumlahItem"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/custom_edit_text"
            android:fontFamily="@font/poppinsregular"
            android:inputType="number"
            android:hint="Masukkan Jumlah Item"
            android:padding="7dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnTambahItem"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#3C9626"
            android:fontFamily="@font/poppinsregular"
            android:text="Tambah"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>